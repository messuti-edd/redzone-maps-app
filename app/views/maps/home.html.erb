<div id="container">

	<p id="notice"><%= notice %></p>

	<div id="top_search_bar">
		<div style="float:left;">
			<input type="text" name="search_key" value="<%=  @user_location %>" />
			<input type="button" name="search" value="Go" />
		</div>

		<input type="button" value="Reportar delito" id="new_point" />
		
		<div style="clear: both"></div>
	</div>


	<div id="new_point_form" style="display: none">
		<div class="ftitle">Tipo de Delito:</div>
		<div class="fdata">
			<select name="tipo">
				<option value="-1">---</option>
				<%= options_from_collection_for_select(MapPointTipo.all(), :id, :nombre) %>
			</select>
		</div>

		<div class="ftitle">Fecha:</div>
		<div class="fdata big"><input type="text" name="fecha" value="" /></div>

		<div style="clear: both"></div>

		<div class="ftitle">Barrio:</div>
		<div class="fdata">
			<input type="text" name="barrio" value="" />
		</div>

		<div class="ftitle">Descripci&oacute;n:</div>
		<div class="fdata big"><textarea name="descr" style="width: 360px"></textarea></div>

	</div>
	<div id="map_canvas" class="map_tu_pin" style="width: 760px; height: 400px"></div>


	<% if signed_in? %>
		<a href="/logout">Logout</a>
	<% else %>
		<a href="/auth/facebook">Facebook Login</a>
	<%  end %>

</div>

