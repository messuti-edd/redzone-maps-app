<div id="reportDialog" title="Reporta un Delito" style="display: none">
	<fieldset>
		<dl>
			<dt>Pais:
			<dd><input type="text" name="pais" value="" disabled />
		</dl>
		
		<dl>
			<dt>Departamento:
			<dd><input type="text" name="dep" value="" disabled />
		</dl>
		
		<dl>
			<dt>Localidad:
			<dd><input type="text" name="localidad" value="" disabled />
		</dl>
		
		<dl>
			<dt>Barrio:
			<dd><input type="text" name="barrio" value="" />
		</dl>
		
		<dl>
			<dt>Tipo:
			<dd><select name="tipo">
					<option value="-1">---</option>
					<%= options_from_collection_for_select(MapPointTipo.all(), :id, :nombre) %>
				</select>
		</dl>
		
		<dl>
			<dt>Descripci&oacute;n:
			<dd><textarea name="descr"></textarea>
		</dl>
		
		<dl>
			<dt>Fecha:
			<dd><input type="text" name="fecha" value="" />
		</dl>
		
		<dl>
			<dt>&nbsp;
			<dd><input type="button" name="send_point" value="Aceptar" />
		</dl>
	</fieldset>
</div>



